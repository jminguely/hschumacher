{% extends 'layout/main.twig' %}

{% block main %}
  <div class="container">
    <div class="row snap-child">
      <div class="col-md-4">
        <h2>{{ post.post_title }}</h2>
      </div>
      <div class="col-md-4 offset-md-2">
        <div class="post-content">
          {{ post.post_content|raw }}
        </div>
      </div>
    </div>
  </div>
  <section class="structure snap-child">
    <div class="container">
      {% if fn.get_field("structure", post.ID) %}
        <div class="row">
          {% for item in fn.get_field("structure", post.ID) %}
            <div class="col-md-6 col-lg-3">
              <div class="structure-card">
                {% if item.logo %}
                  <img class="img-fluid mb-3" src="{{ item.logo.sizes.medium }}" alt="{{ item.title }}">
                {% endif %}
                <p class="mt-auto">{{ item.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>
  {% include 'parts/video.twig' with { videoName: 'pluie_1'} %}
  <section class="maitrise snap-child">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h2>Ma√Ætrise et Techniques</h2>
        </div>
        <div class="col-md-8 offset-md-1">
          <div class="text-two-col">
            {{ fn.get_field("maitrise_et_techniques", post.ID)|raw }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
