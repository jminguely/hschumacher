<div class="pt-4 mb-5 snap-child-no-margin"></div>
<header class="site-header">
  <div class="container-fluid px-4 d-flex justify-content-between align-items-end mb-5">
    <h1 class="m-0">
      <a href="{{ fn.home_url() }}">
        <img class="logo" src="{{ fn.get_template_directory_uri }}/dist/img/logo.svg" alt="">
      </a>
    </h1>
    <a href="#" class="toggle-navigation d-md-none">
      <span class="burger-icon"></span>
    </a>
    <nav class="site-navigation">
      {% if mainNav %}
        <ul>
          {% for item in mainNav %}
            <li>
              <a 
                href="{{ item.url }}">
                {{ item.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>
  </div>
</header>