<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta property="og:title" content="{{ fn.bloginfo( 'name' ) ~ fn.wp_title('-', true, 'left') }}" />
{% if post.post_type == 'post' %}
    {% set og_type = 'article' %}
{% else %}
    {% set og_type = 'website' %}
{% endif %}

<meta property="og:type" content="{{ og_type }}" />
<meta property="og:url" content="{{ fn.get_permalink(post.ID) }}" />
<meta property="og:image" content="{{ fn.get_the_post_thumbnail_url(post.ID, 'large')|raw ?: fn.get_template_directory_uri ~ '/dist/img/website-cover.png'}}" />