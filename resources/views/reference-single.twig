{% extends 'layout/main.twig' %}

{% block main %}  
  <div class="container-sm">
    <div class="row">
      <div class="col-md-4">
        <h2>{{ post.post_title }}</h2>
      </div>
      <div class="col-md-8">
        <p>{{ meta(post.ID, "th_description")|first|raw }}</p>
      </div>
    </div>
    
    <div class="row d-flex flex-row justify-content-between">
      <div class="flex-grow-1 px-3 mb-5">
        <h3>Entreprise</h3>
        <p>{{ meta(post.ID, "th_entreprise")|first|raw }}</p>
      </div>
      <div class="flex-grow-1 px-3 mb-5">
        <h3>RÃ©alisation</h3>
        <p>{{ meta(post.ID, "th_realisation")|first|raw }}</p>
      </div>
      <div class="flex-grow-1 px-3 mb-5">
        <h3>Prestation</h3>
        <p>{{ meta(post.ID, "th_prestation")|first|raw }}</p>
      </div>
      <div class="flex-grow-1 px-3 mb-5">
        <h3>Couts</h3>
        <p>{{ meta(post.ID, "th_couts")|first|raw }}</p>
      </div>
      <div class="flex-grow-1 px-3 mb-5">
        <h3>Divers</h3>
        <p>{{ meta(post.ID, "th_divers")|first|raw }}</p>
      </div>
    </div>

    <div class="row">
      {% for image in meta(post.ID, "th_galerie") %}
        <div class="col-sm-2 col-md-4">
          <img class="img-full" src="{{ fn.wp_get_attachment_image_src(image, 'reference_thumbnail')[0] }}">
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
